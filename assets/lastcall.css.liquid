.cover-products-section {
	display: flex;
  	flex-direction: column;
}

.upper-part-lastcall-image {
  display: grid;
  grid-template-columns: 55% 40%;
  width: 100vw;
  background-image: url({{ 'Sale-Collection-Page-Header-Bkgd.png' | asset_url }});
  height: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position-y: center;
    
}

.upper-part-lastcall-image .collection-review-section{
	display: flex;
	align-items: center;
	justify-content: center;
    max-height: 335px;
}
#shopify-section-collection-lastcall-review .coll-sign-up-desc{
	font-family:'Work Sans', sans-serif;
	font-weight:400;
}
.collection-review-title-lastcall{
	font-family: 'Noto Serif Display', sans-serif;
	font-weight: 700;
  font-size: 3.3rem;
}
.collection-review-desc-lastcall{
	font-size: 1.3rem;
	font-weight: 550;  
	line-height: 1;
}
.footer__newsletter.last-call-email{
    border: 1px solid #80808052;
}
.footer__newsletter.last-call-email input::placeholder{
	opacity: 0.5;
}
#Capa_1{
	opacity: 0.5;
}
#shopify-section-collection-lastcall-review {
	display: flex;
	align-content: center;
	flex-direction: column;
	text-align: unset;
}

.last-call-image.grid.upper-grid-collection {
	border: none;
}
.lastcall-product-title-and-description .last-call-title p, .p-rich_text_section, .p1 .s1 {
	font-family: 'Work Sans',sans-serif;
	font-weight: 300;
}
.last-call-title{
	display: flex;
	flex-direction: column;
}
.last-call-title h3{
	font-weight: 600;
	margin: unset;
	margin-bottom:7px;
}
.last-call-title p{
	margin:unset;
	margin-bottom: 7px;
}

.lastcall-product-title-and-description {
	display: flex;
	justify-content: space-between;
	margin-top:80px;
	margin-bottom:7px;
}
.collection-products-div.last-call-box{
	display:flex;
	flex-direction:column;
	justify-content: space-between;
	padding: 0 0 10px 0;
}
.last-call-box .collections-title-paragraph{
	margin-bottom: 10px;
}
.last-call-box .collections-option-paragraph{
	font-family: 'Work Sans',sans-serif;
	font-size: 1em;
	font-weight: 500;
	margin: 0;
	line-height: 1;
	margin-bottom: 10px;
}
.last-call-box .collections-option-paragraph span{
	font-size: 1em;
  font-weight: 400;
}

.lastcall-info{
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.collection-total-products-for-title.last-call-boxes{
	grid-column-gap: 25px;
	grid-row-gap: 25px;
}
.lastcall-product-title-and-description .collection-review {
	font-size:12px;
	align-content: center;
	margin-left: 7px;
}

.lastcall-product-title-and-description .yotpo-filter-stars.rating-stars-container {
	font-size:9px;
}

.lastcall-paras .collections-title-paragraph{
	font-family: 'Noto Serif Display', sans-serif;
  line-height: 1.2;
	font-size:1.2em;
	font-weight: 600;;
}
.last-call-price-section{
	line-height: 1;
	font-family: 'Work Sans',sans-serif;
	font-size: 1.1em;
	font-weight: 400;
	margin-bottom: 0;
}

.last-call-price-section .collection-products-sales-price{
	color: #E24B4B;
	font-weight: 500;
	font-size: .8em;
}
.last-call-box .collection-products-image-border{
	padding:unset;
}
.black-collection .page-width.last-call-collection-boxes{
	background: black;
	color: white;
}

@media (max-width: 768px) {
	.upper-part-lastcall-image{
		display: grid;
		grid-template-columns: unset;
		width: 100vw;
		background-image: url({{ 'Sale-Collection-Page-Mobile-Bkgd.png' | asset_url }});
		height: 100%;
		background-size: cover;
		background-repeat: no-repeat;
	  grid-template-rows: 52% 24% 13%;    
  }
  .lastcall-product-title-and-description{
		margin-top:15px;
	}
	.last-call-title h3{
		margin-bottom:3px;
	}
	.last-call-title p{
		margin-bottom: 3px;
	}
	.collection-review-title-lastcall{
		font-size: 37px;
		margin-bottom:15px;
	}
	.collection-review-desc-lastcall br{
		display: none;
	}
	.collection-review-desc-lastcall{
		font-size: 13px;
		font-weight: 600;
		letter-spacing: 0;
 	}
	.coll-sign-up-desc{
		font-size: 12px;
		letter-spacing: 0;
		margin: 0 15px 15px;
	}
	.coll-sign-up-desc br{
		display: none;
	}
  .lastcall-email{
  	margin: unset;
    margin-left: 21px;
	}
	.lastcall-email #newsletter-footer {
		width: 94%;
	}
  .lastcall-product-title-and-description{
    flex-direction: column;
    justify-content: flex-start;
    padding-top: 25px;
    border-top: 1px solid white;
  }
  .last-call-reviews.wb-collection-review-container{
  	justify-content: unset;
  }

  #shopify-section-collection-lastcall-review{
		margin: 0 16px;
  }

  .collection-total-products-for-title.last-call-boxes{
		grid-column-gap: 5px;
		grid-row-gap: 10px;
  }
  .page-width.last-call-collection-boxes{
		padding: 0 13px;
  }
  .lastcall-info{
		margin: 0 11px 25px 10px;
  }

  .lastcall-paras .collections-title-paragraph{
		font-size: 15px;
  }
  .collection-products-div.last-call-box {
		padding: unset;
		margin-top: 9px;
  }
  .last-call-box .collections-option-paragraph{
		font-size: 12px;
  }
  .last-call-box .collections-option-paragraph span{
		font-size: 11px;
	}
  .last-call-title span{
		font-family: 'Work Sans', sans-serif;
		font-weight: 300;
  	font-size: 12px;
  }	
  .last-call-title p{
  	font-size: 12px;
  }	
  .last-call-title .c-message_kit__blocks.c-message_kit__blocks--rich_text{
  	font-size: 11px;
  }
  .last-call-lines.hr-end-collection{
    height: unset;
    margin-top: unset; 
		border-bottom: unset;
	}
  .last-call-collection-boxes .cover-products-section{
  	margin-bottom: 40px;
  }
  .js.sticky-header{
  	padding-bottom:unset;
  }
  	
}

