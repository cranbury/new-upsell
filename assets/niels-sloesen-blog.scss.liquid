.blog-main {
  max-width: 800px;
  margin: 1em auto;
}

.div-blog-tags {
  margin-bottom: 1em;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.btn-tag-blog {
  color: black;
  text-transform: uppercase;
  border: 1px solid black;
  width: 150px;
  height: 40px;
  font-size: .85rem;
  font-weight: bolder;
  margin: 10px 5px 10px;
  display:flex;
  place-content:center;
  place-items:center;
  
  &.tag-selected {
    color: white;
    background: black;
  }
  
  &:first-of-type {
   margin: 10px 10px 0 0;
  }
  
  &:last-of-type {
    margin: 10px 0 0 10px;
  }
}

.blog-main-upper-div-p {
  margin: 1em 0;
}

.div-blog-pagination {
  display: flex;
  justify-content: center;
}

.blog-main-articles {
  display:grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 20px;
  
  .blog-article-img {
    width:100%;
    padding: 0 0 100% 0; 
    background-size:cover;
  }
  
  .blog-article-title {
	font-size: 1.2em;
    font-weight: bolder;
    margin: 0;
  }
  
  .blog-article-excerpt {
    font-size:0.8em;
  }
}

.btn-blog-prv-nxt {
  width: 100px;
  height: 40px;
  text-align: center;
  color: black;
  border: 1px solid black;
  text-transform: uppercase;
  margin: 0 1em;
  font-size: .85rem;
  display: flex;
  place-items: center;
  place-content: center;
  font-weight: bold;
  &.unselectable {
    opacity: .5;
  }
}

.blog-paginations-numbers {
  display: flex;
  place-items: center;
  font-size: 1.4rem;
}

.div-blog-pagination {
  grid-column: 1/3;
  margin: 1.5em 0;
}

.blog-main-upper-p {
  font-size: 15px;
}

.blog-article-title {
  font-size: .9rem;
}


@media only screen and (max-width: 425px) {
  
  .btn-tag-blog {
    width: 90px;
    font-size:0.7em;
    margin:5px 5px;

    &:first-of-type {
     margin:5px 5px;
    }

    &:last-of-type {
      margin:5px 5px;
    }
  }
  
  .blog-main-upper-div-p {
    padding: 1.5em;
    padding-bottom: .5em;
  }
  
  .blog-main-articles {
    display: block;
    padding: 0 2.5em;
  }
  
  .blog-paginations-numbers {
    font-size: 1rem;
  }
  
  .btn-tag-blog {
    height: 30px;
    width: 120px;
  }
  .blog-main-upper-p {
    line-height: 1.2;
  }
  .div-blog-pagination {
    margin: 3em 0;
  }
}
