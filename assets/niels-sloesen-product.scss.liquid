/*   padding-top: 3em; */
  
  .layr-feats-2-desktop {
    display:block;
  }
  
  .layr-feats-2-mobile {
    display:none;
  }
  
  img {
    width:70%;
    margin:0 auto;
  }
}

.innovation-layr-feats-3 {
  width: 100vw;
  display:grid;
  grid-template-columns:repeat(3, 1fr);
  padding:3.5em 6em;
  grid-gap: 1em;
}

.layr-feats-2-container {
  width:100%;
  height:100%;
}

.layr-feats-2-img {
  width:calc((100vw - 12em)/3);
  height:calc(((100vw - 12em)/3) * 1.1);
  background-size: contain;
  background-position: center;
}

.layr-feats-2-content {
  text-align:center;
  
  p:first-child {
    font-weight: bold;
    font-size: 1.2em;
    font-family: 'Libre Baskerville', serif;
  }
  
  p:not(:first-child) {
    line-height: 1.3;
    font-size: 0.9em;
  }
}

  
.layr-material-top {
  width:100vw;
  height:85vh;
  display:grid;
  grid-template-columns:repeat(2, 1fr);
  grid-template-rows:55% 45%;
  
  .layr-material-cover {
    background-size:cover;
    background-repeat:no-repeat;
    grid-column-start:1;
    grid-column-end:3;
    display:block;
  }
  
  
  .layr-material-cover-2 {
    display:none;
    background-size:cover;
    background-repeat:no-repeat;
    grid-column-start:1;
    grid-column-end:3;
  }
  
  .left-feat {
    grid-column-start:1;
    grid-column-end:2;
    grid-row-start:2;
    grid-row-end:3;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    
    h2 {
      width: 100%;
      height: fit-content;
    }
    
    
    .layr-feat-content-mobile {
      display:none;
    }
    
    img {
      width:150px;
      height:150px;
      display: inline-block;
    }
  }
  
  .right-feat {
    grid-column-start:2;
    grid-column-end:3;
    grid-row-start:2;
    grid-row-end:3;
    
    .lyar-feat-bullet {
      padding-left:1em; 
    }
  }

  .layr-material-feat {
    width: 100%;
    opacity: 0.5;
    background: #F4F5F6;
    
    &.material-selected {
      opacity: 1;
      background: #4B5966;
      color: #fff;
    }
    
    &.material-selected h2 {
      background: #224152;
      border: 3px solid #224152;
      color: #fff;
      padding: .75em;
      letter-spacing: 0.2em;
    }
    
    h2 {
      background: #fff;
      border: 3px solid grey;
      color: #C4C6CB;
      padding: .75em;
      font-weight: bold;
      font-size: 1.5rem;
      font-family: 'Raleway', sans-serif;
      font-weight: bold;
      letter-spacing: 0.2em;
      text-align:center;
    }
    
    &.material-selected p {
      color: #fff;
      background: #4B5966;
    }
    
    p {
      background: #F4F5F6;
      font-size: 14px;
      width: 87%;
      margin: 2em 2em 2em 4em;
    }
    
    @media (hover: hover) {
      &:hover {
        opacity: 0.75;
        background: #4B5966;
        h2 {
          background: #224152;
          border: 3px solid #224152;
          color: #fff;
        }
        p {
          color: #fff;
          background: #4B5966;
          font-size: 14px;
        }
        ul {
          color: #fff;
        }
      }
    }


  }
  
  .layr-feat-content-desktop.layr-feat-content-desktop.layr-feat-content-desktop {
    width:50%;
    display:inline-block;
    margin: 0em 0em 2em 1em;
  }

  
  .caret-down {
    width:40px;
    display: inline-block;
    cursor:pointer;
    transform: rotate(180deg) scaleX(2) translate(-5px, 3px);
    font-weight: normal;
    
    &.hyphen {
      transform: scaleX(2.5) translate(7px);
    }
  }
}

.pillow-flex-item {
  display:inline-block;
}

.pillow-flex-item-mobile {
  display:none;
}
.pillow-img {
  text-align:center;
  img {
    max-width:50%;
    margin: 0 auto;
  }
}

/* END - LAYR PILLOW PRODUCT PAGE */

