/* BAMBOO SHEET PRODUCT PAGE */
.innovation-bamboo-feats-1 {
  width: 100vw;
  height: 600px;
  background-size:cover,109%;
  background-position:right,0% 15%;
  background-repeat:no-repeat,no-repeat;
  display:grid;
  grid-template-columns:repeat(2, 1fr);
}

.bamboo-feats-left, .bamboo-feats-right {
  width:100%;
  height:100%;
}

.bamboo-feats-right {
  text-align:center; 
  
  h2 {
    margin-top: 2.5em;
  }
}

.bamboo-feats-left {
  display:grid;
  grid-template-columns:repeat(2, 1fr);
  grid-template-rows:repeat(2, 1fr);
}

.bamboo-feats-box {
  width:100%;
  height:100%;
  text-align:center;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.feats-left-icon {
/*   border: 3px solid #bfa549; */
/*   border-radius: 100%; */
  padding: 10px;
  margin-bottom:15px;
  display:block;
  &.feat-mobile {
    display:none;
  }
}


.feats-left-content {
  color:white;
  display:block;
  font-size:1em;
  line-height: 1;
  
  span {
    font-weight:bold; 
  }
}

.innovation-bamboo-feats-2 {
  width: 100vw;
  display:grid;
  grid-template-columns:repeat(3, 1fr);
  padding:3.5em 6em;
}

.bamboo-feats-2-container {
  width:100%;
  height:100%;
}

.bamboo-feats-2-img {
  width:calc((100vw - 12em - 400px)/3);
  height:calc((100vw - 12em - 400px)/3);
  background-size: contain;
  background-position: center;
  margin:0 auto;
}

.bamboo-feats-2-content {
  text-align:center;
  
  p:first-child {
    font-weight: bold;
    font-size: 1.2em;
    margin-top:1.5em; 
    font-family: 'Libre Baskerville', serif;
  }
  
  p:not(:first-child) {
    line-height: 1.3;
    font-size: 0.9em;
  }

}

.innovation-bamboo-feats-3 {
  background:#124e59;
  background-size:cover;
  backgroud-repeat:no-repeat;
  width: 100vw;
  height: 500px;
  text-align:right;
  color:white;
  padding: 10.5em 7.5em;
  
  .innovation-bamboo-feats-3-desktop {
    display:block;
  }
  
  .innovation-bamboo-feats-3-mobile {
    display:none;
  }
  
  h1 {
    font-family:'Raleway', sans-serif;
    font-weight:bolder;
    letter-spacing:10px;
    font-size: 3em;
  }
  
  p {
    font-size: 1.3em;
  }
}

.innovation-bamboo-feats-4 {
  width: 100vw;
  height: 550px;
  text-align:left;
  color:white;
  padding: 7.5em;
  
  h1 {
    font-family:'Raleway', sans-serif;
    font-weight:bolder;
    letter-spacing:10px;
    font-size: 3em;
    margin-bottom:1em;
  }
  
  p {
    font-size: 1.3em;
  }
  
  .innovation-bamboo-feats-4-desktop {
    display:block;
  }
  
  .innovation-bamboo-feats-4-mobile {
    display:none;
  }

}
/* END - BAMBOO SHEET PRODUCT PAGE */

/* LAYR PILLOW PRODUCT PAGE */

.innovation-layr-feats-1 {
  width:100vw;
  height:0;
  position:relative;
  padding-bottom:56.25%;
  background-image: linear-gradient(white 0 70%, #d2d9dd 70% 200%);
  background-size:cover;
  background-repeat:no-repeat;
  
  iframe {
    width:80vw;
    height:calc(80vw * 0.5625);
    position:absolute;
    top:12.5%;
    left:10%;
    border: 2px solid white;
    box-sizing: content-box;
  }
}

.innovation-layr-feats-2 {
