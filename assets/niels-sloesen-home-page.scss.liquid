
.home-carousel {
  overflow:hidden;
  position:relative;
  width:100vw;
  height:calc(100vw * 0.32);
  z-index:1;
}

.home-carousel-controls {
  position:absolute;
  width: 100vw;
  bottom: 0px;
  display: flex;
  justify-content: center;
}

.carousel-control {
  margin:10px 10px 30px 10px;
  width:20px;
  height:20px;
  border:2px solid grey; 
  border-radius:50%;
  display:inline-block;
  cursor:pointer;
}

.active-control {
  background: rgba(255, 255, 255, 0.5);
}

.home-carousel-wrapper {
  display:flex;
  position:relative;
  top:0;
  left:0;
  width:500vw;
  height:100%;
}

.home-carousel-wrapper.shifting {
  transition: left .75s ease-out;
}

.home-carousel-slide {
  width:100vw;
  height:100%;
  background-size:contain;
  background-repeat:no-repeat;
  display:inline-grid;
  grid-template-columns: 70% 30%;
  position:relative
}

.home-carousel-slide.main-slide {
  display:inline-grid;
}

.slide-content {
  color:white;
  grid-column-start:2;
  grid-column-end:3;
  justify-self:center;
  align-self:center;
  text-align:center;
}

.slide-content .desktop {
  display:block;
}

.slide-content .mobile {
  display:none;
}

.slide-content a {
  color:white;
  font-family: 'Raleway', sans-serif;
  text-transform:Uppercase;
  padding: 0.8vw 3.5vw;
  border: 2px solid #c5b377;
  font-size:1vw;
}

.slide-title {
  font-size: 5vw;
}

.slide-desc {
  text-transform:Uppercase;
  font-family: 'Josefin Sans', sans-serif;
  font-size: 2.2vw;
}

.slide-review {
  text-transform:Uppercase;
  font-family: 'Raleway', sans-serif;
  font-size: 1.5vw;
  margin-bottom:3em;
}

.slide-review-container {
  margin-top:1.5em;
}
  
.slide-content .yotpo-icon.yotpo-icon-star.rating-star {
  font-size:2.5vw; 
  color:#bfa548;
}

.slide-1-button {
  margin-top:2em;
}

.empty-space {
  height:calc(100vw * 0.32 * 0.08); 
}

.home-collection-1, .home-collection-2 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  margin: 70px 0;
  padding: 0 70px;
  grid-column-gap: 25px;
}

.home-collection-2.cover58 {
	grid-template-columns: 5fr 3fr;
}

.home-collection-3 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  margin: 35px 0;
  padding: 0 70px;
  grid-column-gap: 25px;
  
  .collection-product-home-cover {
    height:calc(((100vw - 190px) / 2) * 0.75);
  }
}

.collection-product-home-cover {
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: 80% 20%;
  justify-content: center;
  align-items: center;
  height: calc(((100vw - 190px) / 3) * 0.75);
  border: 1px solid grey;
  box-sizing:content-box;
}

.home-luxome-difference {
  width: 100vw;
  height: 670px;
  display: grid;
  grid-template-rows: 60% 40%;
}

.luxome-difference-1 {
  width:100vw;
  height:100%;
  position:relative;
  background-repeat: no-repeat, no-repeat;
  background-position-x: center, center;
  background-size: contain, contain;
}

.luxome-difference-image {
  position: relative;
  z-index: 10;
  height: 100%;
  left: 50%;
  transform: translateX(-50%);
}

.luxome-difference-banner {
  padding: 25px 70px;
  text-align: center; 
  background: #d2d9dd;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items:center;
}

.difference-banner-desc-desktop {
/*   margin: 0 auto 4%; */
  width:70%;
}

.difference-banner-desc-desktop p {
  margin: 0 0 5px 0; 
  font-size: 0.9em;
}

.difference-banner-desc-mobile {
  display:none;
}

.luxome-difference-banner a {
  font-weight:bold;
  padding: 7px 45px;
  border: 2px solid #c5b377;
  text-transform:Uppercase;
  color:#214151;
}

.home-luxome-review .yotpo-icon.yotpo-icon-star.rating-star {
  font-size:40.5px; 
  color:#bfa548;
}

.home-luxome-review {
  height:300px;
  color: white; 
  background: #214151;
  text-align:center;
  padding: 45px 70px;
  
  .home-luxome-review-desktop {
    margin-bottom: 2.5em;
  }
  
