/* MOBILE SCREEN SIZE */
@media (max-width: 768px) {
  .dark-blue-h3 {
    font-size: 1rem;
  }
  .dark-blue-h1 {
    font-size: 1.2rem;
  }
  .ancillary-main {
    margin: 2em;
  }
  .ancillary-p {
    &.no-text-justify {
      text-align: unset;
    }
    a {
      word-break: break-word;
    }
    &.thank-you {
      margin-top: 3em;
    }
  }
  /* ABOUT US */
  .about-us-main-top {
    display: flex;
    flex-direction: column;
  }
  
  .about-us-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    grid-template-rows: repeat(6, 1fr);
    grid-gap: 0;
  }
  .about-us-grid-item {
    & .ancillary-p {
      text-align: center;
    }
  }
  .about-us-vfc {
    margin: 2em 1em 1em;
    font-size: 1.4rem;
    align-self:center;
  }
  .about-us-mobile {
    display: block;
  }
  .about-us-main-top {
    display: none;
  }
  .hr-divider {
    margin-top: 4em;
    .oneEm {
      margin-top: 1em;
    }
  }
  /* CONTACT US */
  .contact-us-upper .ancillary-p {
    text-align: center;
  }
  .contact-us-bottom .ancillary-p {
    text-align: center;
  }
  .btn-light-white {
    margin: 1em;
  }
  .btn-dark-blue {
    margin: 1em;
  }
  /* RETURN POLICY */
  .returns-exhanges-main {
    margin-bottom: 4em;
    ol li {
      margin-left: 0;
    }
    & .ancillary-h4 {
      margin: -1em 0 .5em;
      font-size: 1.2rem;
    }
  }
  /* FAQ */
  .accordion {
    padding: .5em 1.5em;
    font-size: 13px;
  }
  .panel{
    padding: 0 1em;
  }
  
  /* VIDEOS */
  .ancillary-main.videos-main {
    margin: 2em;
  }
  .video-margin {
    margin: 1em 0 2em;
  }
  .video-h3.coming-soon {
    margin-top: 1em;
  }
  /* CART PAGE */
  .js-qty__num {
    transform: scale(0.8) translateY(-1px) !important;
  }
  .drawer .js-qty__adjust.js-qty__adjust--remove {
    right: -4%;
    font-size: 12px;
  }
  .js-qty__adjust.js-qty__adjust--plus {
    left: 5.5em;
  }
  .h3.drawer__title {
    font-size: 1.25rem;
    color: #224152;
    padding-left: 0;
  }
  .drawer__close-button.js-drawer-close {
    padding: 0;
  }
  .trial-bar.appear-animation.appear-delay-1 .h4 {
    font-size: .9rem;
    line-height: .5;
  }
  .ajaxcart__subtotal {
    font-size: 12px;
  }
  .ajaxcart__price span-quicksand {
    font-size: 12px;
  }
  .grid__item.three-quarters.product-details-cart-wrapper {
    padding-top: 0;
  }
  .ajaxcart__product-meta.ajaxcart__product-meta {
    font-size: 10px;
  }
