.something-different {
	height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  max-width: 579px;
}
.something-different a button {
  background: white;
  color: black;
  padding: 13px;
}
.layr-feats-2-content {
  text-align: center;
  margin-top: 1em;
}
.performance-img-mobile {
  display: none;
}
.dual-loop-img {
  height: 100%
}
.performance-inline-words {
  margin-top: 30px;
}
.loop-performance-icon {
  width: 68%;
  padding-top: 25px;
}
.dual-loop-performance-icon-text {
  font-size: 12px;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-gap: 15px;
  width: 73%;
  padding: 15px 0 0 0;
}
.performance-meet-text {
  font-size: 0.49em;
  font-weight: bolder;
}
.stars span {
  color: rgb(189, 163, 72);
}
.yotpo-performance {
  vertical-align: baseline;
  font-family: inherit;
  font-style: inherit;
  padding: 0;
  margin: 0 0 2em;
  letter-spacing: normal;
}
.performance-img {
  position: absolute;
  width: 54%;
  height: 400px;
  padding: 0;
}
.performance-meet-content {
  margin: 0;
  font-size: 13px;
  width: 87%;
  font-family:'Work Sans', sans-serif;

}
.performance-meet-feats-3 {
  width: 100%;
  display: flex;
  justify-content: space-around;
  max-width: 600px;
  margin-top: 35px;
}
.performance-meet-2-img {
  width: 75px;
  height: 75px;
}
.performance-meet-2-container {
    max-width: 136px;
}
.performance-meet-2-content {
  text-transform: uppercase;
  letter-spacing: 0px;
  font-size: 12px;
  margin-bottom: 10px;
  font-weight: bolder;
}
.performance-layr-feats-3 {
  width: 100vw;
  display: grid;
  grid-gap: 1em;
  grid-template-columns: repeat(3, 1fr);
  padding: 1em 6em;

}
.performance-regulating-bamboo {
  width: 100%;
  padding-left: 4em;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.loop-performance-regulating-bamboo {
  width: 100%;
  height: 400px;
  text-align: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: black;
}
.plush-performance-bamboo-container {
  background-image:url('{{ 'PPTowels-Desktop-2022.png' | asset_url}}');
  width: 100vw;
  min-height: 600px;
  background-size: cover;
  background-position: 0 0;
  background-position-x: right;
  background-repeat: no-repeat;
  display: grid;
  grid-template-columns: 50% 50%;

}
.plush-performance-bamboo-container.spa-collection {
  background-image:url('{{ 'SCTowels-Desktop-2022.png' | asset_url}}');
}
.performance-icon {
  width: 78%;
  max-width: 540px;
}
.performance-bamboo-title {
  font-size: 2.1em;
}
.performance-meet-title {
  font-size: 2em;
  font-weight: 700;
}

.dual-loop-bamboo-container {
  display: flex;
  flex-direction: column-reverse;
  height: unset;
  margin: 2em 1em 2em 1em;
  background: linear-gradient(-90deg, #fff 50%, #f4f4f4 0);
}
.video-performance-bamboo-container {
  display: grid;
  grid-template-columns: 60% 40%;
  margin: 2em 1em 2em 1em;
  background: linear-gradient(90deg, #fff 61%, #f4f4f4 0);
}
.towel-bamboo-container {
  display: grid;
  justify-content: space-around;
  grid-template-columns: 52% 50%;
  margin: 2em 0 2em 0;
  background: linear-gradient(-90deg, #fff 50%, #fff 0);
}
.dual-loop-bamboo-title {
  font-size: 1.5em;
  line-height: 1.2;
}
.dual-loop-bamboo-content {
  padding: 0 4em 0 0;
}
.dual-loop-top {
  width: 100%;
  height: 100%;
  text-align: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 0 1em 0;
}
@media only screen and (max-width: 480px) {
  .product-feature-badges-container {
    min-height: 760px;
  }
  .innovation-bamboo-feats-1 {
    min-height: 760px;
  }
  .innovation-layr-feats-2 {
    min-height: 435px;
  }
  .innovation-layr-feats-2 img {
    max-width: 150%;
    width: 150%;
  }
  .innovation-layr-feats-3 .layr-feats-2-img {
    width: calc((100vw - 4em));
    height: calc(((100vw - 4em)) * 1.1);
  }
  .bamboo-feats-2-img {
    width: calc(100vw - 8em);
    height: calc(100vw - 8em);
    background-size: contain;
    background-position: 50%;
    margin: 0 auto;
  }
  .plush-performance-bamboo-container.pp-font .performance-bamboo-title.performance-bamboo-title{
    font-size: 19.4px;
  }
  .something-different a button{
    padding: 5px 20px;
  }
  .something-different{
    height: 85px;
    padding-top: 35px;
  }
  .performance-regulating-bamboo{
    height: 381px;
  }
}

@media only screen and (max-width: 750px) {
  .plush-performance-bamboo-container {
    background-image:url('{{ 'PPTowels-Mobile-2022.png' | asset_url}}');
    display: flex;
    align-items: flex-end;
    padding: 0 0 0 0;
    background-size: 100%;
    background-position: top;
    min-height: 560px;
  }
  .plush-performance-bamboo-container.spa-collection {
    background-image:url('{{ 'SCTowels-Mobile-2022.png' | asset_url}}');
  }
  .performance-icon {
    width: 100%;
  }
  .performance-bamboo-title {
    font-size: 1.7em;
