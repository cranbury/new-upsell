    position: inherit;
    height: 217px;
    padding: unset;
    width: 100%;
  }
  .dual-loop-performance-icon-text.dual-loop-performance-icon-text {
    font-size: 10px;
    width: 95%;
    line-height: 12px;
  }
  .product-review-div span.yotpo-icon {
    display: none;
  }
  .product-review-div {
    background-color: var(--general-black);
    color: #fff;
    padding: 0em 0 2em;
    text-align: center;
  }
  .product-review-yotpo-p {
    font-family: var(--main-font-standard), serif;
    font-size: 21px;
    margin: 0.5em 2em;
