    margin: 1em;
    background: #f4f4f4;
  }
  .loop-performance-regulating-bamboo {
    height: unset;
  }
  .performance-regulating-bamboo {
    padding-left: 20px;
    padding-right: 20px;
    justify-content: center;
    align-items: center;
  }
  .performance-layr-img {
    background-size: contain;
    background-position: 50%;
    padding: 10em 4em 8em 5em;
  }
  .performance-meet-2-img {
    width: 75px;
    height: 75px;
  }
  .performance-feats-2-img {
    width: calc((100vw - 4em));
    height: calc(((100vw - 4em)) * 1.1);
  }
  .video-performance-bamboo-container {
    margin: 0 1em;
    grid-template-columns: repeat(1, 1fr);
    grid-template-rows: repeat(1, 1fr);
    background: linear-gradient(180deg, #fff 34%, #f4f4f4 0);
  }
  .video-performance-bamboo-container {
    background: linear-gradient(180deg, #fff 40%, #f4f4f4 0);
