  img .dual-loop-img {
    width: calc((55vw - 4em));
    height: calc(((55vw - 4em)) * 1.1);
    margin: 0 auto;
  }
}
@media only screen and (min-width: 751px) {
  .dual-loop-bamboo-container.dual-loop-bamboo-container {
    grid-template-columns: 45% 55%;
    display: grid;
    margin: 20px;
    height: 478px;
    background: none;
  }  
}
@media only screen and (min-width: 900px) {
  .performance-meet-2-content.performance-meet-2-content {
    text-transform: uppercase;
    letter-spacing: 1px;
