    &.mobile {
      display: none;
    }
  }
}

.p-letterspacing {
  letter-spacing: 0.2em;
  font-size: 13px;
}

.product-details-ul {
  li {
    font-size: 13px;
    list-style-type: none;
    position: relative;    /* It's needed for setting position to absolute in the next rule. */
    line-height: 1.25;
  }
  li::before {
    content: 'â– ';
    position: absolute;
    left: -0.8em;          /* Adjust this value so that it appears where you want. */
    font-size: 1.1em;      /* Adjust this value so that it appears what size you want. */
    transform: translate(-10px, -1px);
  }
}

.product-details-promo-banner {
  margin: 2em 0;
  display: block;
  &.mobile {
    display: none;
  }
}

.details-tab {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2px solid #224152;
  padding: .5em 2em;
  font-weight: bold;
  font-size: 13px;
  color: #224152;
  letter-spacing: 0.25rem;
  &:nth-child(1) {
    /* border-right: 0; */
  }
  &:nth-child(2) {
    border: 2px solid #224152 1px solid #224152;
  }
  &:nth-child(3) {
    border-left: 0;
    border-right: 0;
  }
  &::after {
    content: "^";
    transform: rotate(180deg) scaleX(2) translate(-5px, 3px);
    font-weight: normal;
  }  
  &.button-selected {
    background-color: #224152;
    color: #fff;
    font-weight: bold;
    font-size: 13px;
/*     border:2px solid #224152 !important; */
    &::after{
      content: "-";
      transform: scaleX(2.5) translate(7px);
    }
  }

}

@media(hover: hover) and (pointer: fine) {
