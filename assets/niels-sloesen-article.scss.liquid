.article-container {
  max-width: 800px;
  margin: 1em auto;
  display: grid;
  grid-auto-flow:column;
  grid-gap: 2em;
}

.article-cover-image {
  max-width: 800px;
  margin: 2em auto;
  position: relative;
}

.article-cover-image-overlay {
  position: absolute;
  top: 90px;
  left: 0;
  right: 350px;
  bottom: 110px;
  color: #fff;
  padding: 2em 1em 2em 3em;
  background-color: rgba(0,0,0,.4);
  & .article-h2 {
    font-family: 'Raleway', sans-serif;
    font-weight: bold;
    font-size: 2.5rem;
    margin-bottom: .1em;
  }
  & .article-h4 {
    font-size: 1.25rem;
    letter-spacing: 0;
    font-weight: normal;
    opacity: .8;
  }
}

.article-hc-div {
  padding: 1.5em 0;
}

.article-divider {
  height: 1px;
  background: #C5C6C8;
  margin: 0 70px;
}

.div-a-blog-home {
  display: flex;
  justify-content: center;
  padding: 3em 0;
  &.mobile {
    display: none;
  }
  & .a-blog-home {
    width: 150px;
    height: 35px;
    color: #224152;
    border: 1px solid #224152;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: .8rem;
    font-weight: bold;
  }
}

.img-article-top {
  display: block;
  &.mobile {
    display: none;
  }
}

@media (max-width: 425px) {
  .article-container {
    display: block;
    margin: 2em;
  }
  .div-a-blog-home {
    padding: 3em 0 4em;
    &.mobile {
      padding: 2em 0 0;
      display: flex;
      justify-content: center;
    }
  }
  .article-divider {
  margin: 0 2em;
  }
  .article-cover-image-overlay {
    left: 0;
    right: 0;
    bottom: 0;
  }
  .img-article-top {
    display: none;
  &.mobile {
    display: block;
  }
}
}


    