                      <div class= "left">
                        <img src="{{ 'diamon.png' | asset_img_url: '300x' }}" class="reason-img" alt="Diamond">
                      </div>
                      <div class="right">
                        <h1 class="lH1">PREMIUM QUALITY GUARANTEED</h1>
                        <h3 class="lH3">Best-in-class products & customer service</h3>
                      </div>
                    </div>
                    <div class="item-ch">
                      <div class= "left">
                        <img src="{{ 'CarGold.png' | asset_img_url: '300x' }}" class="reason-img" alt="Diamond">
                      </div>
                      <div class="right">
                        <h1 class="lH1">FAST & FREE SHIPPING</h1>
                        <h3 class="lH3">Contiguous US states</h3>
                      </div>
                    </div>
                    <div class="item-ch">
                      <div class= "left">
                        <img src="{{ 'Icon-OekoTex_120x.png' | asset_img_url: '300x' }}" class="reason-img" alt="Diamond">
                      </div>
                      <div class="right">
                        <h1 class="lH1">QUICK & EASY RETURNS</h1>
                        <h3 class="lH3">Rest easy with our 30-day return policy</h3>
                      </div>
                    </div>
                  </div>`
                  document.querySelector(".order-summary__sections").appendChild(price)
                 document.querySelector(".order-summary__sections").appendChild(el)
                 
                 
                 document.querySelector(".order-summary__sections").append(need)
                 
             }
               window.onload = function(){
                 insertGold(); 
                 setPrice(); 

                 setInterval(function(){
                  setPrice(); 
                  document.querySelectorAll('tr.product').forEach(function(el,i){
                    
                    let compareAt = prices[i].compare_at
                    let delPrice = el.querySelector('del')
                    if (compareAt && delPrice){
                      delPrice.innerText = '$' + ((compareAt / 100).toFixed(2))
                      delPrice.style.display = 'inline'
                      let discount = el.querySelector('.reduction-code__text')
                      if (discount){
                        discount.style.display = 'contents'
                        
                        discount.innerText = Math.round(100 * ((prices[i].compare_at - prices[i].final_price) / prices[i].compare_at)) + '% off!'
                      }
                    }
                    
                 })
                  document.querySelectorAll('.reduction-code__text').forEach(function(el){
                    el.style.display = 'inline'
                  })
                 document.querySelectorAll('.reduction-code').forEach(function(el){
                    el.style.display = 'list-item'
                  })
                 },1000)
                 document.querySelectorAll('tr.product').forEach(function(el){
                  if (el.innerText.includes('50%')){
                    let compareAt = 2 * parseFloat(el.querySelector('.product__price span.order-summary__emphasis').innerText.slice(1,10))
                    let delPrice = el.querySelector('del')
                    delPrice.innerText = '$' + (Math.round(compareAt * 100) / 100).toFixed(2)
                    delPrice.style.display = 'inline'
                  }
                 })


               }
              </script>       
            
